@{
    ViewData["Title"] = "Tambah Barang";
}
@model CodeFirst.Models.Entities.Barang


<div class="container shadow p-5">
    <div class="row pb-2">
        <h2>Tambah Barang</h2>
    </div>

    <form action="Create" method="post">
        <div asp-validation-summary="All"></div>

        <div class="form-row">
            
            <div class="form-group col-md-6">
                <label asp-for="Kode">Kode Barang</label>
                <input type="text" class="form-control mb-3" asp-for="Kode" placeholder="Enter Code">
                <span asp-validation-for="Kode" class=" alert-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="Nama">Nama</label>
                <input type="text" class="form-control mb-3" asp-for="Nama" placeholder="Enter Name">
                <span asp-validation-for="Nama" class=" alert-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="Description">Deskrispsi</label>
                <input type="text" class="form-control mb-3" asp-for="Description" placeholder="Enter Description">
                <span asp-validation-for="Description" class=" alert-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="Harga">Harga</label>
                <input type="text" class="form-control mb-3" asp-for="Harga" placeholder="Enter Price">
                <span asp-validation-for="Harga" class=" alert-danger"></span>
            </div>
                        <div class="form-group col-md-6">
                <label asp-for="Stok">Stok</label>
                <input type="text" class="form-control mb-3" asp-for="Stok" placeholder="Enter Stock">
                <span asp-validation-for="Stok" class=" alert-danger"></span>
            </div>
        </div>



        <button type="submit" class="btn btn-lg btn-primary p-2"><i class="bi bi-file-plus-fill"></i>Save</button>
        <a asp-controller="Home" asp-action="Index" class="btn btn-lg btn-warning p-2">Back To List</a>
    </form>

</div>
